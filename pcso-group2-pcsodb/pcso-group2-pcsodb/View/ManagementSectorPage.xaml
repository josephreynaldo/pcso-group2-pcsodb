<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pcso_group2_pcsodb.View.ManagementSectorPage"
             Routing.Route="ManagementSector"
             Title="ManagementSector">
    <StackLayout>
        <Label Text="Management Sector"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
               FontSize="30"/>

        <Label></Label>
        <Button
            Command="{Binding GoToDepartmentACommand}"
            Margin="20,0,20,20"
            Text="Department A"
            FontSize="30"/>

        <Label></Label>
        <Button
            Command="{Binding GoToDepartmentBCommand}"
            Margin="20,0,20,20"
            Text="Department B"
            FontSize="30"/>

        <Label></Label>
        <Button
            Command="{Binding GoToHomeCommand}"
            Margin="20,0,20,20"
            Text="Go ToHome"
            FontSize="30"/>
        
    </StackLayout>
</ContentPage>
